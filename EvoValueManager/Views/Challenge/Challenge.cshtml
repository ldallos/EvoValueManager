                    })
                </div>
                <div class="evo-flex">
                    <p class="evo-challenge-label">
                        <strong>Szerezhető Merészség:</strong>
                    </p>
                    @Html.TextBoxFor(m => Model.SelectedChallenge.GainableBravery, new
                    {
                        @class = "evo-margin",
                        @type = "number",
                        @min = "0",
                        @max = "100",
                        @placeholder = "0"
                    })
                </div>
                <button type="submit" class="btn btn-primary">Mentés</button>
            </div>
        }
    </div>
}

